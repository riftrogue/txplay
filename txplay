#!/usr/bin/env bash
# txplay launcher script

INSTALL_DIR="$HOME/.txplay"
BIN_DIR="$HOME/.local/bin"

# Handle uninstall command
if [ "$1" = "uninstall" ]; then
    echo "Removing txplay..."
    rm -rf "$INSTALL_DIR"
    rm -f "$BIN_DIR/txplay"
    echo "txplay removed"
    exit 0
fi

if [ ! -d "$INSTALL_DIR" ]; then
    echo "Error: txplay not installed. Run the installer first:"
    echo "curl -fsSL https://raw.githubusercontent.com/riftrogue/txplay/installation-test/install.sh | bash"
    exit 1
fi

exec python3 "$INSTALL_DIR/app.py" "$@"
